@* ReSharper disable MarkupTextTypo *@
@* ReSharper disable MarkupAttributeTypo *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="ambachtelijke stroopwafels">
    <meta name="author" content="Jan Stroopwafel">
    <link rel="shortcut icon" href="http://www.versestroopwafels.nl/wp-content/uploads/2015/04/favicon.ico" />
    <title>@ViewBag.Title</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link href="~/font-awesome/css/all.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link href="~/font-awesome/css/all.css" rel="stylesheet" />
    </environment>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body id="page-top" class="index">
    <nav id="mainNav" class="navbar navbar-custom navbar-expand-lg sticky-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggler navbar-toggler-right" data-bs-toggle="collapse" data-bs-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="#page-top">Peter Stroopwafel</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="#markt">Op de markt</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#peter">Over Peter</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>
    <!-- Header -->
    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <img class="img-responsive" src="waffle2.png" alt="heerlijke stroopwafel">
                    <div class="intro-text">
                        <span class="name">Peter Stroopwafel</span>
                        <hr class="star-light">
                        <span class="skills">Ambachtelijke stroopwafels</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    @RenderBody()

    <!-- Footer -->
    <footer class="text-center">
        <div class="footer-above">
            <div class="container">
                <div class="row">
                    <div class="footer-col col-md-3">
                        <img class="img-responsive img-centered" src="images.jpg" alt="" style="max-width: 150px;" />
                    </div>
                    <div class="footer-col col-md-6">
                        <h3>Vertel hoe lekker ze zijn!</h3>
                        <ul class="list-inline text-center">
                            <li class="list-inline-item">
                                <a href="#" class="btn-social btn-outline"><i class="fab fa-facebook align-middle"></i></a>
                            </li>
                            <li class="list-inline-item">
                                <a href="#" class="btn-social btn-outline"><i class="fab fa-google-plus align-middle"></i></a>
                            </li>
                            <li class="list-inline-item">
                                <a href="#" class="btn-social btn-outline"><i class="fab fa-twitter align-middle"></i></a>
                            </li>
                        </ul>
                    </div>
                    <div class="footer-col col-md-3">
                        <ul class="list-group">
                            <li class="list-unstyled">
                                <h4><i class="fa fa-check" aria-hidden="true"></i> De lekkerste</h4>
                                Volgens traditioneel Hollands recept met scharreleieren en echte boter!
                            </li>
                            <li class="list-unstyled">
                                <h4><i class="fa fa-check" aria-hidden="true"></i> De meest ambachtelijke</h4>
                                Zonder chemische smaak-, geur- en kleurstoffen.
                            </li>
                            <li class="list-unstyled">
                                <h4><i class="fa fa-check" aria-hidden="true"></i> De meest Hollandse</h4>
                                Eet het en je weet het.
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-below">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        Copyright &copy; Peter Stroopwafel @DateTime.Today.Year
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
    <div class="scroll-top page-scroll hidden-sm hidden-xs hidden-lg hidden-md">
        <a class="btn btn-primary" href="#page-top">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>

    @await RenderSectionAsync("modals", required: false)
    <environment include="Development">
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </environment>
    <!-- Plugin JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    @await RenderSectionAsync("scripts", required: false)
</body>
</html>
@* ReSharper restore MarkupTextTypo *@
@* ReSharper restore MarkupAttributeTypo *@
